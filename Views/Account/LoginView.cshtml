@model Small_Library.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/register.css" asp-append-version="true" />
</head>
<body>
<div class="centered-container">
    <div class="switcher">
        <a href="/Account/Register" class="switcher-link"><button type="button">Sign Up</button></a>
        <button class="active">Login</button>
    </div>
    <form asp-action="Login" method="post" class="register-card">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" placeholder="Enter your username" />
        <span asp-validation-for="Username"></span>

        <label asp-for="Password">Password</label>
        <input asp-for="Password" placeholder="Enter your password" type="password" />
        <span asp-validation-for="Password"></span>

        <button type="submit" class="register-btn">Login</button>
    </form>
</div>
</body>
</html> 